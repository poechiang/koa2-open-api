{
    "name": "octopus",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "description": "a restfull api project base on node & koa",
    "author": "Jeffrey Chiang",
    "private": false,
    "scripts": {
        "adoc": "apidoc -i src/api -o src/views/rest",
        "tdoc": "typedoc --tsconfig ./tsconfig.json",
        "start": "yarn adoc && nodemon",
        "build": "rm -rf dist && tsc",
        "pro": "npx pm2 start ecosystem.config.js --env production",
        "restart": "pm2 restart ecosystem.config.js --env production",
        "stop": "npx pm2 stop ecosystem.config.js"
    },
    "keywords": [
        "koa",
        "typescript"
    ],
    "dependencies": {
        "autoprefixer": "^10.4.4",
        "bootstrap-icons": "^1.8.1",
        "chai": "^4.3.4",
        "crypto-js": "^4.0.0",
        "date-fns": "^2.22.1",
        "dotenv": "^8.2.0",
        "koa": "^2.7.0",
        "koa-bodyparser": "^4.3.0",
        "koa-convert": "^2.0.0",
        "koa-ejs": "^4.3.0",
        "koa-json": "^2.0.2",
        "koa-less": "^0.0.3",
        "koa-router": "^7.4.0",
        "koa-static": "^5.0.0",
        "koa-views": "^8.0.0",
        "koa-virtual-host": "^0.2.0",
        "koa2-cors": "^2.0.6",
        "lodash": "^4.17.21",
        "mongoose": "^5.12.2",
        "postcss": "^8.4.12",
        "rxjs": "^6.6.6",
        "ts-loader": "^8.0.18",
        "tslint": "^6.1.3"
    },
    "devDependencies": {
        "@types/apidoc": "^0.50.0",
        "@types/autoprefixer": "^10.2.0",
        "@types/crypto-js": "^4.0.1",
        "@types/koa": "^2.0.48",
        "@types/koa-bodyparser": "^4.2.2",
        "@types/koa-convert": "^1.2.4",
        "@types/koa-ejs": "^4.3.0",
        "@types/koa-json": "^2.0.18",
        "@types/koa-router": "^7.0.40",
        "@types/koa-static": "^4.0.2",
        "@types/koa2-cors": "^2.0.1",
        "@types/lodash": "^4.14.168",
        "@types/node": "^12.0.0",
        "apidoc": "^0.51.1",
        "nodemon": "^1.19.0",
        "pm2": "^3.5.0",
        "stylelint": "^13.13.1",
        "stylelint-config-recommended": "^5.0.0",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-order": "^4.1.0",
        "ts-node": "^8.1.0",
        "tsconfig-paths": "^3.8.0",
        "typedoc": "^0.22.15",
        "typescript": "4.5.5"
    }
}
