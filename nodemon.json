{
    "restartable": "rs",
    "verbose": true,
    "watch": ["src"],
    "ext": "ts js json ejs less",
    "env": {
        "NODE_ENV": "development"
    },
    "ignore": [".git", ".svn", "logs", "pem", "node_modules/**/node_modules"],
    "exec": "ts-node -r tsconfig-paths/register --files src/main.ts"
}
