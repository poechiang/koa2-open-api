{
    "extends": ["stylelint-config-recommended", "stylelint-config-standard"],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["extends"]
            }
        ],
        "block-no-empty": null,
        "unit-allowed-list": ["em", "rem", "s", "%", "px", "vw", "vh"],
        "indentation": 4
    }
}
